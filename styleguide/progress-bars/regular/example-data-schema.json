{
  "percent": {
    "label": "%",
    "type" : "number",
    "min" : 0,
    "max" : 100,
    "step" : 1
  },
  "barAttrs": {
    "type": "group",
    "values": [
      {
        "type": "attribute",
        "key": "class",
        "value": {
          "type": "group",
          "values": [
            {
              "label": "Striped",
              "type": "switch",
              "on" : "progress-bar-striped"
            },
            {
              "label": "Animate stripes",
              "type": "switch",
              "on": "active"
            }
          ]
        }
      },
      {
        "type": "attribute",
        "key": "type",
        "value": {
          "label": "Context",
          "type" : "select",
          "optional": true,
          "values": [
            {
              "label" : "Success",
              "value" : "success"
            },
            {
              "label" : "Info",
              "value" : "info"
            },
            {
              "label" : "Warning",
              "value" : "warning"
            },
            {
              "label" : "Danger",
              "value" : "danger"
            }
          ]
        }
      },
      {
        "type": "attribute",
        "key": "type",
        "value": {
          "label": "Animate transitions",
          "type": "switch",
          "off": "false",
          "default": "on"
        }
      }
    ]
  },
  "sections": {
    "label": "Method of labeling",
    "type": "section-switch",
    "values": [
      {
        "label": "Only for screen readers",
        "value": "default"
      },
      {
        "label": "Visually",
        "value": "label"
      }
    ]
  }
}
